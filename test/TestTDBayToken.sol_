// Test3DToken.sol

pragma solidity ^0.5.0;

import "truffle/Assert.sol";
import "truffle/DeployedAddresses.sol";
import "../contracts/TDBayToken.sol";

import "openzeppelin-solidity/contracts/token/ERC20/ERC20Detailed.sol";

contract TestTDBayToken {
	
	TDBayToken token_contract;

	function beforeAll() public{
		token_contract = TDBayToken(DeployedAddresses.TDBayToken());
	}

	function testInitialSupply() public {
		Assert.equal(token_contract.totalSupply(),
					 token_contract.INITIAL_SUPPLY(), 
					 "Initial supply not correctly initialized.");
	}

	function testInitialBalance() public {
		Assert.equal(token_contract.balanceOf(msg.sender),
					 token_contract.INITIAL_SUPPLY(), 
					 "Initial balance of the owner should be INITIAL_SUPPLY.");
	}
}
